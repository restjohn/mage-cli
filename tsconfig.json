{
  "$schema": "https://json.schemastore.org/tsconfig",

  "include": [
    "src"
  ],
  "compilerOptions": {
    "lib": [ "ES2020" ],
    "module": "commonjs",
    "target": "ES2016",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "outDir": "lib"
  }
}